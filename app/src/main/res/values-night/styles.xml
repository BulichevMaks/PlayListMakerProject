<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SwitchCompat" parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">#46bdbf</item>
        <item name="colorSwitchThumbNormal">#AEAFB4</item>
        <item name="android:colorForeground">#E6E8EB</item>
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="TextViewSettingsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_settings_activity</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="ImageViewSettingsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="ActivityMainButtonTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_weight">1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size_main_activity</item>
        <item name="android:letterSpacing">@dimen/letter_spacing</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="ErrorMessageStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">54dp</item>
    </style>
</resources>