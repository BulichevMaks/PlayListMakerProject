<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlayListMakerProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--   <item name="android:background">@color/background_main</item> -->
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="Search">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableStart">@drawable/ic_search2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@drawable/et_style</item>
    </style>
    <style name="Track">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="Track.Text">
        <item name="android:textSize">11sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="MainActivity">
        <item name="android:background">@color/background_main</item>
    </style>
    <style name="TextPlayerLabel">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">#AEAFB4</item>
    </style>
    <style name="TextPlayer">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="AddImagePlayer">
        <item name="android:src">@drawable/ic_add_button</item>
    </style>
    <style name="PlayImagePlayer">
        <item name="android:src">@drawable/ic_play_button</item>
    </style>
    <style name="FavoriteImagePlayer">
        <item name="android:src">@drawable/ic_favorite_button</item>
    </style>

</resources>